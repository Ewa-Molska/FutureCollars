package org.FutureCollars.Calculator;

public class Calculator {
    public static int sum(int a, int b) {
        int result = a + b;

        return result;
    }

    public static int subtract(int a, int b) {
        int result = a - b;

        return result;

    }

    public static int multiply(int a, int b) {
        int result = a * b;

        return result;


    }
    public static int division(int a, int b) {
        int result  = a / b;

        return result;
    }
}


ackage org.FutureCollars.Callculator;

import org.FutureCollars.Calculator.Calculator;
import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.Test;

public class CalculatorTest {
    @Test
    public  void shouldAddTwoNambers () {
        int result = Calculator.sum (1,2);

        Assertions.assertEquals(3, result);
    }
    @Test
    public void shouldsSubtractTwoNambers() {
        int result = Calculator.subtract (3,2);

        Assertions.assertEquals(1, result);
    }
    @Test
    public void shouldsMultiplyTwoNumbers () {

        int result = Calculator.multiply (2,3);

        Assertions.assertEquals(6, result);
    }
    @Test
    public void shoildsDivisionTwoNumbers () {

        int result = Calculator.division (6,2);

        Assertions.assertEquals( 3, result);

    }
}
